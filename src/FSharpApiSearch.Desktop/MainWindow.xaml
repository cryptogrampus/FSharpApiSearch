<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSharpApiSearch.Desktop;assembly=FSharpApiSearch.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Name="QueryInput" Text="{Binding Path=Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding  Gesture="Enter" Command="{Binding Path=Search}"/>
                </TextBox.InputBindings>
            </TextBox>
            <Button Grid.Column="1" Content="Search" Command="{Binding Path=Search}" />
        </Grid>
        <Label DockPanel.Dock="Top" Content="{Binding Path=ErrorMessage}" Visibility="{Binding Path=HasError, Converter={StaticResource BooleanVisibilityConverter}}" />
        <Label DockPanel.Dock="Top" Content="{Binding Path=ResultCount}" ContentStringFormat="{}{0} results" Visibility="{Binding Path=Searched, Converter={StaticResource BooleanVisibilityConverter}}" />
        <ListView Padding="0" ItemsSource="{Binding Path=Results}" Visibility="{Binding Path=Searched, Converter={StaticResource BooleanVisibilityConverter}}" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Path=AccessPath, Mode=OneTime}" Foreground="DarkGray" Padding="0" />
                        <Label Content="." Padding="0" />
                        <Label Content="{Binding Path=Name, Mode=OneTime}" Padding="0" />
                        <Label Content=" : " Padding="0" />
                        <Label Content="{Binding Path=Signature, Mode=OneTime}" Padding="0" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Window>
